<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:background="@drawable/shadow_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/group_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/group_single_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/group_single_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/group_single_image" />

    <TextView
        android:maxLength="60"
        android:id="@+id/group_single_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/group_single_name"
        android:layout_below="@+id/group_single_name"
        android:layout_marginTop="10dp"
        android:text="User default Status"
        android:layout_alignLeft="@+id/group_single_name" />


</RelativeLayout>