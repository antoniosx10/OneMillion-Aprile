<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/shadow_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/task_item"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_work_black_24dp"
        android:id="@+id/img_contact"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_task"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nome contatto"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Numero di telefono"
            android:textColor="#000" />

        <TextView
            android:id="@+id/deadline_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Numero di telefono"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/Categoria_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_error_outline_black_24dp"
            android:visibility="invisible" />


    </LinearLayout>



</LinearLayout>